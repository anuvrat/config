[pull]
	rebase = true

[push]
	autoSetupRemote = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = false
	line-numbers = true
	syntax-theme = tokyonight_night

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[rerere]
	enabled = true

[alias]
	lg = log --oneline --graph --decorate --all
	lga = log --graph --abbrev-commit --decorate --format=format:'%C(blue)%h%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(magenta)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim)- %an%C(reset)'
	undo = reset --soft HEAD~1
	amend = commit --amend --no-edit
	br = branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative))%(color:reset)'
